{
  "name": "n8n-nodes-mirlo",
  "version": "0.1.2",
  "description": "n8n community node for Mirlo - Send WhatsApp messages, manage broadcasts, contacts and conversations",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "whatsapp",
    "mirlo",
    "messaging",
    "broadcast"
  ],
  "license": "MIT",
  "homepage": "https://github.com/MirloLLC/n8n-nodes-mirlo",
  "author": {
    "name": "Mirlo",
    "email": "support@mirlo.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MirloLLC/n8n-nodes-mirlo.git"
  },
  "engines": {
    "node": ">=18.10"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint 'nodes/**/*.ts' 'credentials/**/*.ts'",
    "lintfix": "eslint 'nodes/**/*.ts' 'credentials/**/*.ts' --fix",
    "prepublishOnly": "npm run build && npm run lint"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/MirloApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Mirlo/Mirlo.node.js"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "n8n-workflow": "*",
    "prettier": "^3.3.2",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}
